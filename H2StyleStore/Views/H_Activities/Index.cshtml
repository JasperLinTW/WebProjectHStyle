@model IEnumerable<H2StyleStore.Models.ViewModels.H_ActivityVM>

@{
    ViewBag.Title = "Index";
    var activityName = ViewBag.ActivityName as string;
}

<h2>Index</h2>

<div>
    <sapn>消費者註冊:贈送<input id="register" class="" type="text" /> H幣</sapn>
    <sapn>消費紅利:每消費1000元<input id="consumeH" type="text" /> H幣</sapn>

    <button id="modify" class="btn btn-primary" onclick="" >修改</button>
</div>


<form>
    <div class="row">
        <div class="col-xs-12">
            <div class="caption">
                <h3>Search</h3>
                <div class="row">
                    <div class="col">
                        活動名稱:
                        <input type="text" name="activityName" class="form-control" value="@activityName" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col" style="margin-top: 10px; margin-bottom: 20px; padding-left: 15px;">
        <input type="submit" class="btn btn-primary" value="Search" />
    </div>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Activity_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activity_Describe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.H_Value)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activity_Describe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.H_Value)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.H_Activity_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.H_Activity_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.H_Activity_Id })
            </td>
        </tr>
    }

</table>

@section Scripts
{
    <script>
        $("#modify").on("click", function () {
            $ajax({}).done(function () { }).fail();
        })
    </script>
}
