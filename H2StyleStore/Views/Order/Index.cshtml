@model IEnumerable<H2StyleStore.Models.ViewModels.OrderVM>


@{
    ViewBag.Title = "Index";
}

@{
    IEnumerable<SelectListItem> status = ViewBag.Status;
    var value = ViewBag.Value;
}

<h2 class="mt-2 mb-3">訂單管理</h2>
<form method="get">
