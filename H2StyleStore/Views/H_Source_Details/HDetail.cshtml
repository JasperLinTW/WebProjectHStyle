@model IEnumerable<H2StyleStore.Models.ViewModels.H_Source_DetailVM>

@{
    ViewBag.Title = "HDetail";
}

<h2>HDetail</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.H_Activity_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Difference_H)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Event_Time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.H_Activity_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difference_H)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event_Time)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteDetail", new { id = item.Source_H_Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Check In", "CheckIn", "H_Source_Details") 
